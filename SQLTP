--Tablas Base de Datos SQL Arruabarrena Rocio

--Crear base de datos
CREATE DATABASE MIS_COMERCIOS ;

--Usar base de datos
USE MIS_COMERCIOS;
--Crear tablas
CREATE TABLE PRODUCTOS (
 PRO_ID NUMBER NOT NULL, 
 PRO_NOMBRE VARCHAR (50), 
 PRO_PRECIO NUMBER, 
 PRO_SDC_ID NUMBER, PRO_UDM_ID NUMBER
);
--Asignar indices 
ALTER TABLE PRODUCTOS (
    ADD CONSTRAINT PK_PRO_ID PRIMARY KEY (PRO_ID),
    FOREIGN KEY PRO_SDC_ID REFERENCES SUCURSALES_DE_COMERCIOS (SDC_ID),
    FOREIGN KEY PRO_UDM_ID REFERENCES UNIDADES_DE_MEDIDAS (UDM_ID)
);

CREATE TABLE STOCKS (
    STO_ID NUMBER NOT NULL,
    STO_CANT NUMBER, 
    STO_SDC_ID NUMBER,
    STO_PRO_ID NUMBER
);

ALTER TABLE STOCKS (
ADD CONSTRAINT PK_STO_ID PRIMARY KEY (STO_ID),
FOREIGN KEY (STO_PRO_ID) REFERENCES PRODUCTOS, 
FOREIGN KEY (STO_SDC_ID) REFERENCES SUCURSALES_DE_COMERCIOS
);
